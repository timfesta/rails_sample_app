<%= provide(:title, 'Signup') %>
<h1>Sign Up</h1>
<br>
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
		<div>
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<br>
		<div>
			<%= f.label :email %>
			<%= f.email_field :email %>
		</div>
		<br>
		<div>
			<%= f.submit "Create my Account", class: "btn btn-primary" %>
		</div>
		<% end %>
	</div>
	
</div>
